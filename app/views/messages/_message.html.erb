<% if current_user == message.user %>
  <div class="message user-message" id="message-<%= message.id %>">
      <div class="mr-3">
        <small>
          <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
          <strong><%= message.user.first_name %></strong>
        </small>
        <p><%= message.content %></p>
      </div>
      <%= cl_image_tag message.user.photo.key, class: "avatar-large"%>
  </div>
<% else %>
  <div class="message o-user-message" id="message-<%= message.id %>">
    <%= cl_image_tag message.user.photo.key, class: "avatar-large"%>
    <div class="ml-3">
      <small>
        <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
        <strong><%= message.user.first_name %></strong>
      </small>
      <p><%= message.content %></p>
    </div>
  </div>
<% end %>

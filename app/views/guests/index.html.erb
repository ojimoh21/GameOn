<div class="container mt-3">
  <h1>My Guests</h1>
  <%= link_to "Add new guest", new_party_session_guest_path, class: "btn text-success"%>
  <ul>
    <% @guests.each do |guest| %>
      <li><%= guest.user.first_name %></li>
      <li><%= guest.user.last_name %></li>
      <li><%= guest.user.email %></li>
      <%= link_to "Delete", guest_path(guest), method: :delete, data: {confirm: "Are you sure you want to delete booking?"}, class: "btn btn-flat btn-delete" %>
    <% end %>
  </ul>
</div>

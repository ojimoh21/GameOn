<%= simple_form_for(@party_session) do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :start_date, :order => [:day, :month, :year] %>
  <%= f.input :end_date, :order => [:day, :month, :year] %>
  <%= f.input :start_time %>
  <%= f.input :end_time %>
  <%= f.input :location,
              input_html: { data: { geocoder_target: "address" }, class: "d-none" },
              wrapper_html: { data: { controller: "geocoder", geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } } %>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>

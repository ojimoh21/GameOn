  <%= simple_form_for(@party_session) do |f| %>
    <%= f.input :title %>
    <%= f.input :description, :input_html => { :rows => 3 } %>
    <%= f.input :start_date, as: :string, type: :text %>
    <%= f.input :end_date, as: :string, type: :text %>
    <%= f.input :address,
                input_html: { data: { geocoder_target: "address" } },
                wrapper_html: { data: { controller: "geocoder", geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } } %>
    <%= f.button :submit, class: "app-btn" %>
  <% end %>

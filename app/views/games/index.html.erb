<div class="container mt-3">
  <h1>My Games</h1>
  <%= link_to "Add New Game", new_game_path, class: "btn text-success"%>
  <div class="games-list">
    <% @games.each do |game| %>
      <div class="mt-4 game">
        <% if game.photo.attached? %>
          <a href="games/<%=game.id%>"><%= cl_image_tag game.photo.key, height: 175, width: 97, class:"games-img"%></a>
        <% else %>
          <a href="games/<%=game.id%>"><%= image_tag asset_path("chess-piece.jpeg"), height: 175, width: 97, class:"games-img"  %></a>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<div class="container mt-3" data-controller="games-api">
  <h1 class="text-center">My Games</h1>
  <div class="title-button">
    <%= link_to new_game_path do %>
      <div class="btn app-party-btn-small"><i class="fas fa-puzzle-piece ml-2"></i> <span>Add</span></div>
    <% end %>
  </div>

  <%# <input type="text" placeholder="Search Games" style="width:80%" class="p-3 mt-4" > %>
  <div class="carousel mt-1">
    <h2>My Games</h2>
    <div class="games-list">
      <% @games.each do |game| %>
        <div class="game">
          <% if game.photo.attached? %>
            <a href="games/<%=game.id%>"><%= cl_image_tag game.photo.key,class:"games-img"%></a>
          <% else %>
            <a href="games/<%=game.id%>"><%= image_tag "chess-piece.jpeg", class:"games-img"  %></a>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="carousel mt-5">
    <h2>Hot Games</h2>
    <div class="games-list hot-games-carousel" data-games-api-target="query">
    </div>
  </div>

  <div class="carousel mt-5">
    <h2>Suggested Games</h2>
    <div class="games-list">
      <% @hotgames.each do |game| %>
        <div class="game">
          <% if game.photo.attached? %>
            <a href="games/<%=game.id%>"><%= cl_image_tag game.photo.key,class:"games-img suggested"%></a>
          <% else %>
            <a href="games/<%=game.id%>"><%= image_tag "chess-piece.jpeg", class:"games-img suggested"  %></a>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

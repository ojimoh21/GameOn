<div class="container mt-3">
  <%= link_to "Edit Game", edit_game_path(@game), class: "btn mt-2", style: "color:#308C7B" %>
  <div class="game-card">
  <% if @game.photo.attached? %>
    <%= cl_image_tag @game.photo.key, class: "game-card-img" %>
  <% else %>
    <%= image_tag "chess-piece.jpeg", class: "game-card-img" %>
  <% end %>
    <div class="game-info">
      <h2><%= @game.title %></h2>
      <p><%= @game.description %></p>
    </div>
    <div class="game-extras">
      <p><i class="far fa-clock"></i><%= @game.duration %> min</p>
      <p><i class="fas fa-users"></i><%= @game.suggested_numplayers %> players</p>
    </div>
  </div>
  <%= link_to "Back", games_path, class: "btn ml-2 sessions-past" %>
  <% if current_user == @game.user %>
    <%= link_to "Delete Game", game_path(@game),  method: :delete, data: {confirm: "Are you sure you want to delete game?"}, class: "btn danger" %>
  <% end %>
</div>

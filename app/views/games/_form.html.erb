  <div class="mt-4">
    <%= simple_form_for(@game) do |f|%>
      <%= f.input :title, required: false  %>
      <%= f.input :description, required: false  %>
      <%= f.input :duration, as: :integer, required: false  %>
      <%= f.input :suggested_numplayers, :label => "Suggested Players", as: :integer, required: false  %>
      <%= f.hidden_field :photo, as: :file %>
      <%= f.input :image_url, :label => "Image URL", input_html: {value: ''}, required: false  %>
      <div class="d-flex justify-content-center">
        <%= f.submit "Save", class: "app-party-btn-small mb-4" %>
      </div>
    <%end%>
  </div>
